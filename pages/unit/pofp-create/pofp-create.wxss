/* pages/unit/pofp-create/pofp-fullshow.wxss */
.terms-page {
  position: relative;
  padding: 0 20rpx;
}

.header {
  display: flex;
  align-items: center;
  height: 80rpx;
  padding: 0 20rpx;
  border-bottom: 1px solid #f0f0f0;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  cursor: pointer;
}

.header-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.scroll-content {
  margin-top: 20rpx;
  height: calc(100vh - 80rpx); /* 扣除顶部标题栏的高度 */
  overflow-y: scroll;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #333;
  height: 100vh; /* 占满整个屏幕高度 */
  display: flex;
  flex-direction: column; /* 页面分为上下布局 */
}

/* 页面整体样式 */
.publish-page {
 
}

/* 内容区域样式 */
.content-grid {
  flex: 1; /* 内容部分占据剩余空间 */
  display: grid;
  grid-template-columns: repeat(3, 1fr); /* 3列等宽 */
  gap: 20rpx; /* 网格间距 */
  padding: 20rpx;
  background-color: #f5f5f5; /* 背景色 */
}

.grid-item {
  height: 220rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  border: 1px solid #ddd;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 底部按钮栏 */
.bottom-bar {
  display: flex;
  justify-content: space-between; /* 两个按钮左右分布 */
  align-items: center;
  padding: 20rpx;
  background-color: #ffffff;
  border-top: 1px solid #e5e5e5;
  position: fixed; /* 固定在底部 */
  bottom: 0;
  left: 0;
  width: 100%;
  box-shadow: 0 -2rpx 5rpx rgba(0, 0, 0, 0.1);
}

/* 按钮样式 */
.save-button {
  background-color: #f0f0f0;
  color: #333;
  border: none;
  border-radius: 8rpx;
  padding: 15rpx 30rpx;
  font-size: 28rpx;
}

.publish-button {
  background-color: #ff0000;
  color: #ffffff;
  border: none;
  border-radius: 8rpx;
  padding: 15rpx 50rpx;
  font-size: 28rpx;
}

/* 照片选择区域 */
.photo-selection {
  display: flex;
  align-items: center;
  flex-wrap: wrap; /* 自动换行 */
  gap: 10rpx;
  padding: 10rpx;
  /* background-color: #ffffff; */
  border-bottom: 1px solid #ddd;
  border-radius: 10rpx;
}

.photo-wrapper {
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
  overflow: hidden;
  position: relative;
}

.photo {
  width: 100%;
  height: 100%;
  /* object-fit: cover; */
}

.add-photo-button {
  width: 150rpx;
  height: 150rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: #999;
  background-color: #f0f0f0;
  border: 1px dashed #ddd;
  border-radius: 10rpx;
}

/* 标题输入栏 */
.title-input-wrapper {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.title-input {
  flex: 1;
  height: 80rpx;
  border-bottom: 1rpx solid #ccc;
  /* border-radius: 10rpx; */
  padding: 0 20rpx;
  font-size: 32rpx;
  /* outline: none; */
}


/* 标签选择区域 */
.tags-selection {
  display: flex;
  margin-bottom: 30rpx;
  padding: 20rpx;
  white-space: nowrap;
  overflow-x: auto;
  /* border-bottom: 1px solid #ddd; */
  /* border-radius: 10rpx; */
}
.tags-list {
  display: flex; 
  /* 使用 Flexbox */
}

.tag-button {
  display: flex; 
  font-size: 26rpx;
  border-radius: 20rpx;
  border: 1px solid #ddd;
  color: rgb(255, 255, 255);
  background-color: rgb(161, 161, 161);
  /* width: 100rpx; */
  padding: 5rpx;
  margin-right: 20rpx;   
  transition: all 0.3s ease-in-out; /* 平滑的状态切换动画 */  
   /* 标签之间的间距 */
  /* margin-bottom: 10rpx; */
}


.tag-button.selected {
  color: #fff;
  background-color: #007aff;
  /* background-color: #333; */
  transform: scale(1.1); /* 选中时稍微放大 */
}



/* 内容输入栏 */
.content-input-wrapper {
  display: flex;
  /* flex: 1; */
  /* flex-direction: column; */
  margin-bottom: 30rpx;
}

.content-input {
  width: 100%;
  height: 400rpx;
  border-bottom: 1rpx solid #ccc;
  padding: 20rpx;
  font-size: 28rpx;
  /* outline: none; */
  overflow-y: auto;
}

/* 地点选择框 */
.location-container {
  /* margin: 20rpx; */
  border: 1rpx solid #ddd;
  height: 400rpx;
  border-radius: 10rpx;
  /* overflow: hidden; */
  /* box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1); */
}

.location-info {
  /* padding: 10rpx; */
  font-size: 28rpx;
  color: #333;
  background-color: #f9f9f9;
  border-bottom: 1rpx solid #ddd;
}

.location-info-text{
  color: #333;
  font-weight: bold;
}

.location-map {
  width: 100%;
  height: 100%;
}