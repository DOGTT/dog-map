<!--pages/map/map.wxml-->


<view class="full-screen">
  <van-popup 
  show="{{ show }}" 
  position="bottom"
  z-index="1001"
  custom-style="{{ popupStyle }}"
  bind:close="onClose">
  <van-button plain type="primary" size="small" bindclick="popFullsize" >放大</van-button>
  
  </van-popup>
  <view class="search-bar">
    <view>
      <input class="search-input" type="text" placeholder="搜索" />
    </view>
  </view>

  <scroll-view class="type-selecter-scroll-view" scroll-x="true" bindscroll="scroll" style="width: 100%">
    <view class="button-container">
      <view class="button" bindtap="onSelect">
        <image class="icon" src="/static/png/dog-13.png" />
        <text class="label">选项1</text>
      </view>
      <view class="button" bindtap="onSelect">
        <image class="icon" src="/static/png/dog-13.png" />
        <text class="label">选项2</text>
      </view>
      <view class="button" bindtap="onSelect">
        <image class="icon" src="/static/png/dog-13.png" />
        <text class="label">选项2</text>
      </view>
      <view class="button" bindtap="onSelect">
        <image class="icon" src="/static/png/dog-13.png" />
        <text class="label">选项2</text>
      </view>
      <view class="button" bindtap="onSelect">
        <image class="icon" src="/static/png/dog-13.png" />
        <text class="label">选项2</text>
      </view>
      <view class="button" bindtap="onSelect">
        <image class="icon" src="/static/png/dog-13.png" />
        <text class="label">选项2</text>
      </view>
    </view>
  </scroll-view>

  <!-- <text>pages/map/map.wxml</text> -->
  <map 
  id="map" 
  class="full-screen" 
  latitude="{{latitude}}" longitude="{{longitude}}" scale="{{scale}}" circles="{{circles}}" setting="{{setting}}" markers="{{markers}}" show-location="true" 
  bindregionchange="onChangeRegion" 
  bindtap="onTapMap" 
  bindpoitap="onTapPoi" 
  bindlabeltap="onLabelTap"
  bindcallouttap="onCalloutTap"
  bindmarkertap="onTapMarker"> </map>

  <view hidden="{{detailHidden}}" style="position: absolute; bottom: 400px; right: 300px; z-index: 1000;">
    <text>{{poiInfo}}</text>
  </view>

  <view class="square-button" style="position: absolute; bottom: 40px; right: 30px; z-index: 1000;" bindtap="reLocation">
    <image src="/static/location.svg" class="icon" />
    <text class="button-text">定位</text>
  </view>
</view>