/* 弹出框样式 */
.pofp-detail-popup {
  position: fixed;
  height: 300rpx;
  bottom: -300rpx;
  left: 30rpx; 
  right: 30rpx; 
  border-radius: 15px;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  /* margin: 20px 20px 20px 20px; */
  background-color: #ffffff;
  /* 默认隐藏 */
  /* transform: translateY(100%);  */
  transition: transform 0.3s ease, bottom 0.3s ease;
  /* z-index: 1000; */
}
.pofp-detail-popup-show {
  bottom: 30rpx; /* 弹出到可见区域 */
}
.pofp-detail-popup-hide {
  bottom: -300rpx; /* 隐藏回屏幕下方 */
}
.pofp-detail-card {
  display: grid;
  grid-template-rows: repeat(2, 1fr); /* 等分为两行 */
  height: 300rpx; /* 卡片总高度 */
  border: 1px solid #ccc;
  border-radius: 10rpx;
  overflow: hidden;
  background-color: #ffffff;
}

.pofp-detail-row {
  display: grid;
  position: relative;
  grid-template-columns: 150rpx 1fr; /* 第一列固定宽度，第二列自适应 */
  align-items: center; /* 垂直居中 */
  background-color: #f5f5f5;
  border-bottom: 1px solid #eee; /* 行间分隔线 */
}

.pofp-detail-row:last-child {
  border-bottom: none; /* 最后一行去掉分隔线 */
  grid-template-columns: 250rpx 1fr;
}

/* 第一列样式 */
.pofp-detail-column {
  display: flex;
  flex-direction: column; /* 纵向排列 */
  align-items: center; /* 水平居中 */
  justify-content: center; /* 垂直居中 */
  height: 100%;
  background-color: #f0f0f0;
  padding: 10rpx;
  border-right: 1px solid #ddd; /* 列分隔线 */
}

.pofp-detail-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%; /* 圆形头像 */
  margin-bottom: 10rpx; /* 头像和文字框的间距 */
}

.pofp-detail-avatar-text {
  font-size: 20rpx;
  color: #666;
  text-align: center;
}

/* 第二列样式 */
.pofp-detail-content {
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
}
/* 中间内容样式 */
.pofp-detail-content {
  display: flex;
  flex-direction: column; /* 垂直排列 */
  justify-content: center; /* 内容居中 */
  padding: 20rpx;
}

.pofp-detail-title {
  display: flex; /* 使用 flexbox 布局 */
  align-items: center; /* 垂直居中对齐 */
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.favorite-icon-button {
  display: flex;
  align-items: center;
  justify-content: center;
}

.favorite-icon {
  width:38rpx; /* 图标大小 */
  height: 38rpx;
  margin-left: 20rpx;
  cursor: pointer; /* 鼠标指针样式 */
  transition: fill 0.3s; /* 颜色切换过渡效果 */
}


.pofp-detail-tags {
  display: flex;
  flex-wrap: wrap; /* 标签自动换行 */
  gap: 10rpx; /* 标签之间的间距 */
}

.pofp-detail-tag {
  padding: 5rpx 15rpx;
  font-size: 20rpx;
  color: #fff;
  background-color: #007aff;
  border-radius: 20rpx;
  white-space: nowrap; /* 防止文字换行 */
}
/* 按钮外部容器 */
.pofp-detail-button-wrapper {
  position: absolute;
  display: flex; /* 启用Flexbox布局 */
  justify-content: space-between; /* 水平排列，按钮之间留有间隙 */
  right: 20rpx; /* 距离右边 20rpx */
  top: 50%; /* 垂直居中 */
  transform: translateY(-50%); /* 调整垂直居中 */
}
/* 最右侧按钮样式 */
.pofp-detail-button {
  display: flex;
  flex-direction: column; /* 图标在上，文字在下 */
  align-items: center; /* 水平居中 */
  justify-content: center; /* 垂直居中 */
  height: 100rpx; /* 按钮固定高度 */
  padding: 10rpx;
  background-color: #ffffff;
}

.pofp-detail-button-icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 5rpx; /* 图标和文字之间的间距 */
}

.pofp-detail-button-text {
  font-size: 20rpx;
  color: #333;
  text-align: center;
}

.pofp-detail-row2-column {
  display: flex;
  flex-direction: column; /* 纵向排列 */
  align-items: center; /* 水平居中 */
  justify-content: center; /* 垂直居中 */
  height: 100%;
  background-color: #bbb5b5;
  padding: 10rpx;
  border-right: 1px solid #ddd; /* 列分隔线 */
}