.type-selecter-scroll-view {
  z-index: 1000;
  width: 100%;
  position: absolute;
  top: 200rpx;
  height: 50px; /* 根据内容适当调整 */
  white-space: nowrap;
  overflow-x: auto;
}

.icon {
  width: 40px;
  height: 40px;
  /* margin-bottom: 5px; */
